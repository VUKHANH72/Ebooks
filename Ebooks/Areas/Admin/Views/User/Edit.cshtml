<div class="container" style="width: 600px;">
    <div class="content">
        @using (Html.BeginForm())
        {
            <div class="user-details">
                <div class="input-box">
                    <span class="details">Name</span>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-box">
                    <span class="details">Username</span>
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-box">
                    <span class="details">Password</span>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-box">
                    <span class="details">Type</span>

                    <select name="Type" id="Type" class="category-list-input">
                        <option value="0" @(Model.type == 0 ? "selected" : "")>Nhân Viên</option>
                        <option value="1" @(Model.type == 1 ? "selected" : "")>Admin</option>
                    </select>

                </div>
            </div>

            <div class="button">
                <input type="submit" value="Edit">
            </div>
          }

    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "MangeUser")
</div>
@section upload
{
    <script>
        $(function () {
            $('#btnUpload').click(function () {
                $('#fileUpload').trigger('click');
            });
        });
        $('#fileUpload').change(function () {
            if (window.FormData !== undefined) {
                var fileUpload = $('#fileUpload').get(0);
                var files = fileUpload.files;
                var formData = new FormData();
                formData.append('file', files[0]);
                $.ajax(
                    {
                        type: 'POST',
                        url: '/Book/ProcessUpload',
                        contentType: false,
                        processData: false,
                        data: formData,
                        success: function (urlImage) {
                            $('#pictureUpload').attr('src', urlImage);
                            $('#image_path').val(urlImage);
                        },
                        error: function (err) {
                            alert('Error ', err.statusText);
                        }
                    });
            }
        });
    </script>
}

